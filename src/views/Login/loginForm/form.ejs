<!-- Pills navs -->
<div class="border border-1 border-primary p-4 rounded-6" style="width: 65%">
  <ul class="nav nav-pills nav-justified mb-7 mt-5" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
      <a
        class="nav-link active"
        style="height: 60px; text-align: center; font-size: larger"
        id="tab-login"
        data-mdb-toggle="pill"
        href="#pills-login"
        role="tab"
        aria-controls="pills-login"
        aria-selected="true"
        >User</a
      >
    </li>
    <li class="nav-item" role="presentation">
      <a
        class="nav-link"
        style="height: 60px; text-align: center; font-size: larger"
        id="tab-register"
        data-mdb-toggle="pill"
        href="#pills-register"
        role="tab"
        aria-controls="pills-register"
        aria-selected="false"
        >Parent</a
      >
    </li>
  </ul>
  <!-- Pills navs -->

  <!-- Pills content -->
  <div class="tab-content">
    <div
      class="tab-pane fade show active"
      id="pills-login"
      role="tabpanel"
      aria-labelledby="tab-login"
    >
      <form action="/login" method="post">
        <!-- Email input -->
        <div class="form-outline mb-7">
          <input
            type="email"
            id="loginName"
            class="form-control text-white"
            name="email"
            style="height: 60px; font-size: larger"
          />
          <label class="form-label text-white" for="loginName"
            >Email or username</label
          >
        </div>

        <!-- Password input -->
        <div class="form-outline mb-7">
          <input
            type="password"
            id="loginPassword"
            class="form-control text-white"
            name="password"
            style="height: 60px; font-size: larger"
          />
          <label class="form-label text-white" for="loginPassword"
            >Password</label
          >
        </div>

        <!-- 2 column grid layout -->
        <div class="row mb-4">
          <div class="col-md-6 d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check mb-7 mb-md-0">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="loginCheck"
                checked
              />
              <label
                class="form-check-label text-white"
                style="font-size: larger"
                for="loginCheck"
              >
                Remember me
              </label>
            </div>
          </div>

          <div class="col-md-6 d-flex justify-content-center">
            <!-- Simple link -->
            <a href="#!" style="font-size: larger">Forgot password?</a>
          </div>
        </div>

        <!-- Submit button -->
        <button
          type="submit"
          class="btn btn-primary btn-block mb-4"
          name="submit"
          style="height: 60px; font-size: larger"
        >
          Sign in
        </button>
      </form>
    </div>

    <div
      class="tab-pane fade"
      id="pills-register"
      role="tabpanel"
      aria-labelledby="tab-register"
    >
      <form action="/loginparent" method="post">
        <!-- Username input -->
        <div class="form-outline mb-4">
          <input
            type="text"
            id="registerUsername"
            class="form-control text-white"
            name="keyParent"
            style="height: 60px; font-size: larger"
          />
          <label class="form-label text-white" for="registerUsername">
            Parent Id</label
          >
        </div>

        <!-- Checkbox -->
        <div class="form-check d-flex justify-content-center mb-4">
          <input
            class="form-check-input me-2"
            type="checkbox"
            value=""
            id="registerCheck"
            checked
            aria-describedby="registerCheckHelpText"
          />
          <label class="form-check-label text-white" for="registerCheck">
            I have read and agree to the terms
          </label>
        </div>

        <!-- Submit button -->
        <button
          type="submit"
          class="btn btn-primary btn-block mb-7"
          style="height: 60px; font-size: larger"
        >
          Sign in
        </button>
        <!-- errors -->

        <!-- errors -->
      </form>
    </div>
  </div>
  <!-- Pills content -->
  <!-- errors -->
  <% if(message.length > 0) { %>
  <div class="alert alert-danger mt-2" style="font-size: 12px" role="alert">
    <%= message[0] %>
  </div>
  <% } %>
  <!-- errors -->
</div>
